{
  "family": "aviation-missions",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::YOUR-ACCOUNT-ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR-ACCOUNT-ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "aviation-app",
      "image": "your-registry/aviation-missions:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp",
          "name": "web"
        }
      ],
      "environment": [
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "DATABASE_URL",
          "value": "jdbc:h2:./data/aviation-missions"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "aviation-data",
          "containerPath": "/app/data",
          "readOnly": false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/aviation-missions",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:3000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ],
  "volumes": [
    {
      "name": "aviation-data",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-YOUR-EFS-ID",
        "rootDirectory": "/aviation-missions-data",
        "transitEncryption": "ENABLED"
      }
    }
  ]
}
